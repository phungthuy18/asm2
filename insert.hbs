  .header {
    background: linear-gradient(90deg, rgba(255, 255, 255, 0.5) 0%, rgba(255, 255, 255, 0.5) 100%), url("https://cdn.pixabay.com/photo/2018/08/21/23/29/fog-3622519__340.jpg");
