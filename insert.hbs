<body>
  <div class="container">
    <div class="row justify-center">
      <div class="col-12">
        <header>
          <h1>Add information product</h1>
        </header>
        <div class="input-group mb-3"></div>
    <form action="/doInsert" method="post">

        <input type="hidden" name="id" value="{{_id}}">
        <label for="text">Name:</label><br>
        <input type="text" value="{{name}}" name="txtName"><br>

        <label for="text">MSP:</label><br>
        <input type="text" value="{{MSP}}" name="txtMSP"><br>

        <label for="text">SL:</label><br>
        <input type="text" value="{{SL}}" name="txtSL"><br>

        <label for="text">Price:</label><br>
        <input type="text" value="{{Price}}" name="txtPrice"><br>

        <input type="submit" value="Submit">
</form>
    </form>
          </div>
        </div>

      </div>
    </div>
  </div>



